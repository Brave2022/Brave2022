#include <stdio.h>
// 右移操作符-->>  右移左边补的是符号位 即:正数补0负数补1
int main()
{
	int a = 16;
	//double i = 1.0;
	//
	//00000000000000000000000000010000 16
	//00000000000000000000000000001000 8
	//00000000000000000000000000000100 4
	//
	int b = a >> 1;
	int c = a >> 2;
	//double k =i >> 1.0;  >>操作符的左侧和右侧都不能包含浮点型数字
	printf("%d %d ", b,c);
	//printf("%lf", i);

	return 0;
}
