#include <stdio.h>
int main()
{
	int a = 8;
	int k = -1;
	//
	//100000000000000000000000000000000001  -1         左移符号位不会丢失 即:负数依旧是负数，正数仍然是正数
	//000000000000000000000000000000001000  8
	//000000000000000000000000000000010000  16 
	//000000000000000000000000000000100000  32			//左移一位，右边补0
	int b = a << 1;
	printf("%d\n", b);
	int c = a << 2;
	printf("%d\n", c);
	int i = k << 2;
	printf("%d", i);
	return 0;

}
