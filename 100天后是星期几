#include <stdio.h>
法1：
int main()
{
	int i = 0;
	int a = 0;
	scanf("%d", &a);
	for (i = 0; i < 100; i++)
	{
		if (a == 6)
		{
			a = 0;
		}
		else
		{
			a++;
		}
	}
	printf("%d", a);
	return 0;
}

法2：
int main()
{
	int a = 0;
	scanf("%d", &a);
	if (a == 5)
	{
		a = -2;
	}
	if (a == 6)
	{
		a = -1;
	}
	printf("%d", a + 2);
	return 0;
}
